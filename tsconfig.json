{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,  // Habilita o suporte a decorators
    "emitDecoratorMetadata": true,   // Emite metadados para decorators
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "src/db.test.ts"],
  "exclude": ["node_modules"]
}